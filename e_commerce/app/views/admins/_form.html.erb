<div class="container">
  <%= render 'shared/error', obj: @admin %>
    <div class="row justify-content-center">
        <div class="col-10 shadow p-3 mb-5 bg-light bg-gradient rounded">
	        <%= form_for(@admin, :url => admins_create_path) do |f| %>
		        <div class="form-group">
		             <%= f.label :name %>
		             <%= f.text_field :name, class: "form-control", placeholder: "Enter name", autofocus: true %>
		        </div>
		        <div class="form-group">
		             <%= f.label :contact %>
		             <%= f.text_field :contact, class: "form-control", placeholder: "Enter Your Phone Number", autofocus: true %>
		        </div>
		        <div class="form-group">
		             <%= f.label :email %>
		             <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
		        </div>
		        <div class="form-group">
		             <%= f.label :password %>
		             <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
		        </div>
				    <div class="form-group">
					    <%= f.label :address %>
					    <%= f.text_field :address, class: "form-control", placeholder: "1234 Main St" %>
				    </div>
						<div class="form-group">
						    <%= f.label :address2 %>
						    <%= f.text_field :address2, class: "form-control", placeholder: "Apartment, studio, or floor" %>
						</div>
					  <div class="form-group">
		             <%= f.label :zip %>
		             <%= f.text_field :zip, class: "form-control", placeholder: "Enter Area Pin-code" %>
		        </div>
						<div class="row">
					    <div class="form-group col-md-4 mt-4">
					    	<%= f.label :city %>
						    <%= f.select :city, ["Choose", "Jaipur", "Udaipur", "Sikar", "Surat", "Rajkot","Mumbai", "Nasik", "Chandigarh", "Amritsar", "Lucknow", "Noida", "New Delhi", "Delhi Cant"], class: "form-control" %>
					    </div>
		          <div class="form-group col-md-4 mt-4">
		          	<%= f.label :state %>
		            <%= f.select :state, ["Choose", "Rajasthan", "Gujarat", "Maharashtra", "Punjab", "Delhi", "UP"], class: "form-control" %>
		          </div>
			        <div class="form-group col-md-4 mt-4">
			        	<%= f.label :role %>
						    <%= f.select :role, [["choose..."], ["super_admin", "1"], ["admin", "2"], ["manager", "3"]], class: "form-control" %>
				      </div>
				    </div>
		        <div class="form-group text-center" >
		        	<div class="col-lg-12 mt-4">
	              <%= f.submit "Create", class: "btn btn-outline-dark btn-lg" %>
	            </div>
			      </div>
					<% end %>
				</div>
				<div class="text-center">
			      <%= link_to '[ Cancel and return to Admins ]', admins_path %>
			  </div>
    </div>
  </div>
</div>


